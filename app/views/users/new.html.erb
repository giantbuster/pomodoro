<div class="container">
	<div class="row">
		<!-- User Registration Form -->
		<div class="col-lg-6 col-lg-offset-3" style="margin-top: 10px;">
			<%= simple_form_for @user, :html => {:class => 'form-horizontal'} do |f|%>
				<%= f.input :display_name, label: "Your Display Name", my_wrapper_html: {class: 'col-lg-8'} %>
				<%= f.input :email, label: "Email", my_wrapper_html: {class: 'col-lg-8'} %>
				<%= f.input :password, label: "Password", my_wrapper_html: {class: 'col-lg-8'} %>
				<%= f.input :password_confirmation, label: "Confirm Password", my_wrapper_html: {class: 'col-lg-8'} %>
			<div class="form-group">
				<div class="col-lg-offset-4 col-lg-8">
				<%= f.submit "Register", :class => "btn btn-primary" %> 
				</div>
			</div>
			<% end %>
		</div>
	</div>
	<br>
	<br>
</div>

