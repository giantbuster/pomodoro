<div class="container">
	<h1 class="centered"><span class="text-danger">Pomodoro</span> Logger</h1>
	<h3 id="sub_header" class="lead">A new way to Pomodoro.</h3>
	<br>
	<br>
	<div class="row">
		<!-- User Login Form -->
		<div class="col-xs-6 col-xs-offset-3 login-form">
			<%= simple_form_for @user, url: login_path, :html => {:class => 'form-horizontal'} do |f|%>
				<%= f.input :email, label: false, my_wrapper_html: {class: 'col-lg-12'}, placeholder: "Email" %>
				<%= f.input :password, label: false, my_wrapper_html: {class: 'col-lg-12'}, placeholder: "Password" %>
			<div class="centered">
				<%= f.submit "Login", :class => "btn btn-primary" %> 
				<!-- <div class="fb-login-button">
					<a class="btn btn-primary" href="#">Login with Facebook</a>
				</div> -->
			</div>
			<% end %>
		</div>
	</div>
	<br>
	<br>
	<br>
	<%=  @string %>
	<div class="centered">Don't have an account?</div>
	<div class="centered" style="margin-top: 10px;">
		<a class="btn btn-success" href="/register">Register</a>
	</div>	
</div>